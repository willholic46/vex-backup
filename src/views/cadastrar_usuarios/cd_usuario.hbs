{{#> main}}
{{#*inline "content"}}

<style>
  .geral {
    width: 100%;
  }

  .area_form {
    background-color: #F6F8FA;
    width: 800px;
    overflow: hidden;
    padding: 20px;
  }

  .cabecalho_area_form {
    margin-top: 60px;
    margin-left: 30px;
  }

  .area_inputs_geral {
    height: 320px;

    margin-left: 30px;
    margin-right: 30px;

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .area_inputs {
    width: 50%;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .area_inputs p {
    color: #2C2D2F;
    margin: 0 0 5px 0;
    font-size: 19px;
  }

  .area_inputs input {
    border-radius: 8px;
    border: 1px #FFFFFF solid;
    width: 300px;
    height: 30px;
  }

  .msg {
    width: 100%;

    margin-top: 20px;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .msg p {
    font-size: 22px;
    color: #375D54;
  }

  .area_line {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .line {
    width: 680px;
    border-bottom: solid 1px #6F7382;
  }

  .area_buttons {
    width: 100%;

    margin-top: 10px;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .cancel button {
    border-radius: 8px;
    width: 160px;
    height: 50px;

    font-size: 15px;
    margin-right: 100px;
  }

  .save button {
    border-radius: 8px;
    width: 160px;
    height: 50px;
    font-size: 15px;

    background-color: #2C2D2F;
    color: #FFFFFF;
  }
</style>

<div class="body">

  <div class="cabecalho">
    <h1>Cadastro</h1>
    <span>Adicione um novo usuário ao sistema</span>
  </div>


  <form action="/users/create" method="POST" class="area_form">
    <div class="cabecalho_area_form">
      <h2>Cadastrar um novo usuário</h2>
    </div>

    <div class="area_inputs_geral">

      <div class="area_inputs">
        <div class="input_content">
          <p>Login</p>
          <input type="text" name="login" id="login">
        </div>
      </div>

      <div class="area_inputs">
        <div class="input_content">
          <p>Senha</p>
          <input type="text" name="senha" id="senha">
        </div>
      </div>

      <div class="area_inputs">
        <div class="input_content">
          <p>Repetir senha</p>
          <input type="text">
        </div>
      </div>

      {{!-- <div class="area_inputs">
        <div class="input_content">
          <p>Permissão de acesso</p>
          <select style="width: 300px; height: 30px; border-radius: 4px; border: 1px #FFFFFF solid;" name="privilegio"
            id="privilegio">
            <option value="Administrador">Administrador</option>
            <option value="Usuario">Usuário</option>
          </select>
        </div>
      </div> --}}

      <div class="area_line">
        <div class="line"></div>
      </div>

      <div class="area_buttons">
        <div class="cancel">
          <button type="button" onclick="window.location.href='/users'">Cancelar</button>
        </div>

        <div class="save">
          <button type="submit">Salvar</button>
        </div>
      </div>
    </div>
  </form>

  {{/inline}}
  {{/main}}