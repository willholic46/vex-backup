{{#> main}}
{{#*inline "content"}}

<div class="body">
  <div class="cabecalho">
    <h1>Usuários</h1>
    <span>Crie, gerencie e altere as credenciais de acesso ao sistema.</span>
  </div>

  <div class="container_table">

    <div class="menu_table">

      <div class="count_registers">
        <p>Todos</p>
        <label id="recordCount">X</label>
      </div>

      <div class="label_search">
        <img src="images/icon_search.svg" alt="icon_search">

        <input type="text" id="filter" placeholder="Buscar...">
      </div>

      <a href="/cadastrar_usuario" class="botomn_register">
        <button class="botomn_register">Cadastrar</button>
      </a>
    </div>

    <div class="area_listing_table">
      <table class="listing_table">
        <thead class="thead_listing_table">
          <tr>
            <th>Login</th>
            <th>Senha</th>
            <th>Data de criação</th>
          </tr>
        </thead>

        <tbody class="tbody_listing_table">

          {{#each users}}

          <tr>
            <td>{{this.login}}</td>
            <td>{{this.senha}}</td>
            <td>{{this.data_criacao}}</td>
          </tr>

          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

{{/inline}}
{{/main}}